<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
        
        {position head}

		<title>{ifset #title}{include title|striptags} | {/ifset}CMS WAME Admin</title>

		{block head}
			{control css}
		{/block}

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	
	<body>
		<header class="header">
            <div n:foreach="$flashes as $flash" n:class="'alert alert-dismissible fade in alert-'.$flash->type" role="alert">                
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {$flash->message}
            </div>
            
            {position coreLayoutHeader}
        </header>
		
        {ifset #content} 
            <div> {include #content} </div>
        {/ifset}
        
        <footer class="footer">
            {position coreLayoutFooter}
        </footer>

        <script>var id = {$id};</script>
		{block scripts}
			{control js}
		{/block}
	</body>
</html>